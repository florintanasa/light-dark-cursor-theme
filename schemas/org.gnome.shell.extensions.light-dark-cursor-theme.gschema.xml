<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="light-dark-cursor-theme-extension">
    <schema id="org.gnome.shell.extensions.light-dark-cursor-theme"
            path="/org/gnome/shell/extensions/light-dark-cursor-theme/">
   
        <!-- Add keys for custom themes -->
        <key type="s" name="default">
